@model StudentPortal.Models.DTOs.Faculty.AssignmentCreateDto

@{
    ViewData["Title"] = "Create Assignment";
    var batches = new List<string> { "B1", "B2", "B3", "B4", "B5" };
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="bg-white shadow rounded p-4">
                <button type="button" class="btn btn-outline-light mb-3" onclick="history.back();">
                    &larr; Back
                </button>
                <h3 class="mb-4 text-primary border-bottom pb-2">New Assignment</h3>
                <form asp-action="CreateAssignment" method="post" enctype="multipart/form-data">
                    <div class="row g-4">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div>
                                <label asp-for="Title" class="form-label fw-semibold">Title</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g., Data Structures Assignment 1" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="mt-3">
                                <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                                <input asp-for="DueDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger small"></span>
                            </div>

                            <div class="mt-3">
                                <label asp-for="Batch" class="form-label fw-semibold">Select Batch</label>
                                <select asp-for="Batch" class="form-select">
                                    <option value="">-- Select Batch --</option>
                                    @foreach (var batch in batches)
                                    {
                                        <option value="@batch">@batch</option>
                                    }
                                </select>
                                <span asp-validation-for="Batch" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <div>
                                <label asp-for="Description" class="form-label fw-semibold">Description</label>
                                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Explain the assignment expectations..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="mt-3">
                                <label asp-for="File" class="form-label fw-semibold">Attach File</label>
                                <input asp-for="File" type="file" class="form-control" />
                                <span asp-validation-for="File" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <button type="submit" class="btn btn-primary px-4">Create Assignment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
