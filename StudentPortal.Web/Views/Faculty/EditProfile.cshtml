@model StudentPortal.Models.DTOs.Faculty.FacultyUpdateDto

@{
    ViewData["Title"] = "Edit Faculty Details";
}

<div class="container mt-5" style="max-width: 600px;">
    <button type="button" class="btn btn-outline-light mb-3" onclick="history.back();">
        &larr; Back
    </button>
    <div class="card shadow-sm">
        <div class="card-header  text-black">

            <h3 class="mb-0">Edit Your Details</h3>
        </div>
        <div class="card-body">
            <form asp-action="EditProfile" method="post" novalidate>
                <input type="hidden" asp-for="FacultyId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your full name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mt-4">Update Details</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
